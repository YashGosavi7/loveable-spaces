
# Prevent npm from looking outside the project directory
strict-peer-dependencies=false
engine-strict=false
resolve-url=false
scripts-prepend-node-path=true
package-lock=false
save-exact=true
fund=false
audit=false
# Prevent directory traversal outside project folder
legacy-peer-deps=true
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
# Prevent access to external paths
# This helps avoid the /dev-server lookup
global=false
cache-min=9999999
prefer-offline=true
offline=true
